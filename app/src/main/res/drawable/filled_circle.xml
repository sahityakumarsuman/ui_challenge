<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- larger circle at the back -->
    <item
        android:width="40dp"
        android:height="40dp"
        android:gravity="center">
        <shape
            android:shape="oval">

            <solid
                android:color="#A8FC84"/>

            <corners android:radius="2dp"></corners>
            <!-- thicker outer boarder -->
            <stroke
                android:width="2dp"
                android:color="#A8FC84"/>
        </shape>
    </item>
</layer-list>